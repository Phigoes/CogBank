@model IEnumerable<cogbank.model.Movimentacao>

@{
	ViewBag.Title = "Consultar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
	<div class="span12">
		<div class="grid simple">
			<div class="grid-title">
				<h2>Movimentações</h2>
				<div class="tools">
				</div>
			</div>
			<div class="grid-body">
				<div class="row">
					@Html.Partial("_ErrorSummary")
					<div class="col-sm-12">
						<div class="mb-md">
							<a href='@Url.Action("Acao","Movimentacao", new { id = ViewBag.ContaID })' class="btn btn-primary">&nbsp;Sacar/Depositar</a>
						</div>
					</div>
				</div>
				<br />
				@if (Model.Count() > 0)
				{
					@Html.Partial("_ListaMovimentacoes", Model)
				}
				else
				{
					@Html.Partial("_TableEmpty")
				}
			</div>
		</div>
	</div>
</div>