@model IEnumerable<cogbank.model.ContaCorrente>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">
		<div class="grid simple">
			<div class="grid-title">
				<h2>Contas Correntes</h2>
				<div class="tools">
				</div>
			</div>
			<div class="grid-body">
				<div class="row">
					@Html.Partial("_ErrorSummary")
					<div class="col-sm-12">
						<div class="mb-md">
							<a href='@Url.Action("Adicionar","ContaCorrente")' class="btn btn-primary">&nbsp;Adicionar</a>
						</div>
					</div>
				</div>
				<br />
				@if (Model.Count() > 0)
				{
					@Html.Partial("_ListaContasCorrentes", Model)
				}
				else
				{
					@Html.Partial("_TableEmpty")
				}
			</div>
		</div>
	</div>
</div>